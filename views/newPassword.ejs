<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="UTF-8" />
  <link rel="stylesheet" href="./css/login.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
  <style>
    .input-box {
      position: relative;
    }
  
  

  .show-password {
      position: absolute;
      right: 10px;
      top: 50%;
      transform: translateY(-50%);
      cursor: pointer;
  }
    .error-message {
      color: red;
      font-size: 14px;
      position: absolute;
      bottom: -20px;
      left:3q0px
    }
  </style>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>

<body>
  <div class="container">
    <input type="checkbox" id="flip" />
    <div class="cover">
      <div class="front">
        <img src="./images/signup-img.jpg" alt="" />
        <div class="text">
          <span class="text-1">Every new friend is a <br /> new adventure</span>
          <span class="text-2">Let's get connected</span>
        </div>
      </div>
      <div class="back">
        <img class="backImg" src="" alt="" />
        <div class="text">
          <span class="text-1">Complete miles of journey <br /> with one step</span>
          <span class="text-2">Let's get started</span>
        </div>
      </div>
    </div>
    <div class="forms">
      <div class="form-content">
        <div class="signup-form">
          <div class="title">New Password</div>

          <form id="signupForm" action="/newPasswordData" method="post" onsubmit="return validateForm1()">
            <div class="input-box" style="display: none;">
                <i class="fas fa-envelope"></i>
                <input type="email" name="email" value="<%= email %>" />
              </div>
              <div class="input-box">
                <input type="password" placeholder="Enter new password" name="newPassword" id="password" required />
                <i class="fas fa-eye show-password" id="togglePassword"></i>
                <div class="error-message" id="errorPassword"></div>
            </div>
           
              <div class="button input-box">
                <input type="submit" value="Reset Password"/>
              </div>
              <div class="text sign-up-text">
               Back to login Page <a href="/">Login now</a>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>


    document.addEventListener("DOMContentLoaded", function () {
      var passwordInput = document.getElementById("password");
      var togglePasswordBtn = document.getElementById("togglePassword");

      togglePasswordBtn.addEventListener("click", function () {
          var type = passwordInput.getAttribute("type") === "password" ? "text" : "password";
          passwordInput.setAttribute("type", type);
          togglePasswordBtn.classList.toggle("fa-eye");
          togglePasswordBtn.classList.toggle("fa-eye-slash");
      });
  });
  function validateForm1() {
 
    // If all validations pass, submit the form
    return true;
}
    
</script>
</body>

</html>
