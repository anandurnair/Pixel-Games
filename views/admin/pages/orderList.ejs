<%- include('./includes/adminHeader.ejs'); -%>

    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8">
                    <h1 class="page-header">Order Management</h1>
                </div>
                <li class="search-bar sidebar-search  col-lg-4" style="margin-top: 20px;">
                    <div class="input-group custom-search-form">
                        <form action="/searchGame" method="get" style="display: flex;">

                            <input type="text" class="form-control" name="gameName" placeholder="Search by Game name">
                            <span class="input-group-btn">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fa fa-search"></i>
                                </button>
                        </form>
                        </span>
                    </div>

                </li>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">

                        <div class="panel-heading">
                            Order List
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                          <th>Game Name</th>
                                          <th>Customer</th>
                                          <th>Date</th>
                                          <th>Price</th>
                                          
                                          <th>Status</th>
                                        </tr>
                                      </thead>
                                      <tbody>
                                        <% orders.forEach(order => { %>
                                          <% const items = order.gameItems; %>
                                          <% const user = order.userId; %>
                                      
                                          <!-- Your existing code here -->
                                      
                                          <% if (user && user.fullName) { %>
                                            <!-- Your code for rendering user's full name -->
                                           
                                          <% } else { %>
                                            <!-- Handle case where user is not defined or does not have a full name -->
                                            <td colspan="6">User information not available</td>
                                          <% } %>
                                      
                                          <!-- Iterate over gameItems array and access properties -->
                                          <% items.forEach(item => { %>
                                            <tr class="odd gradeX">
                                              <td><%= item.gameTitle %></td>
                                              <td><%= user.fullName %></td>
                                              <td><%= order.orderDate %></td>
                                              <td> â‚¹<%= item.price %></td>
                                            
                                              <td><%= order.orderStatus %></td>
                                            </tr>
                                          <% }); %>
                                      
                                        <% }); %>
                                      </tbody>
                                      
                                </table>
                            </div>
                            <!-- /.table-responsive -->

                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->

            <!-- /.row -->


        </div>
        <!-- /.container-fluid -->
    </div>