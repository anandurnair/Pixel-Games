<%- include('./includes/adminHeader.ejs'); -%>

<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">Edit Game</h1>
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            Edit game details
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-lg-6">
                <span style="color: red"><%= message1 %></span>
                <form
                  role="form"
                  action="/editGame/<%= game._id %>"
                  method="post"
                  enctype="multipart/form-data"
                  onsubmit="return validateForm()"
                >
                  <div class="form-group">
                    <label>Game name</label>
                    <input
                      class="form-control"
                      type="text"
                      name="gameName"
                      value="<%= game.gameName %>"
                      id="gameNameInput"
                      required
                    />
                    <div id="errorGameName" style="color: red;"></div>
                  </div>

                  <div class="form-group">
                    <label>Description</label>
                    <textarea
                      class="form-control"
                      name="description"
                      id="descriptionInput"
                      cols="30"
                      rows="10"
                      required
                    ><%= game.description %></textarea>
                    <div id="errorDescription" style="color: red;"></div>
                  </div>

                  <!-- ... (other fields) -->

                  <div class="form-group">
                    <label>Price</label>
                    <input
                      class="form-control"
                      type="number"
                    
                      name="price"
                      value="<%= game.price %>"
                      id="gamePrice"
                      required
                    />
                    <div id="errorPrice" style="color: red;"></div>
                  </div>

                  <div class="form-group">
                    <label>Size</label>
                    <div style="display: flex;">
                      <input
                        class="form-control"
                        type="number"
                        name="gameSize"
                        value="<%= game.gameSize %>"
                        id="gameSizeInput"
                        required
                      />
                      <select name="measure" id="measurement">
                        <option value="gb">GB</option>
                        <option value="mb">MB</option>
                      </select>
                    </div>
                    <div id="errorGameSize" style="color: red;"></div>
                  </div>

                  <div class="form-group">
                    <label>Current Image</label>
                    <img
                      src="<%= game.gameImages[0] %>"
                      alt="Current Image"
                      style="max-width: 300px; max-height: 200px"
                    />
                  </div>

                  <input class="form-control" type="file" name="gameImage" id="imageInput1" value="<%= game.gameImages[0] %>" />

                    <div class="form-group">
                      <label>Current Image</label>
                      <img
                        src="<%= game.gameImages[1] %>"
                        alt="Current Image"
                        style="max-width: 300px; max-height: 200px"
                      />
                    </div>
                    <div id="errorImage" style="color: red;"></div>
                  </div>
                  <input class="form-control" type="file" name="gameImage" id="imageInput2" value="<%= game.gameImages[1] %>" />

                    <div id="errorImage" style="color: red;"></div>
                  </div>
                  <div class="form-group">
                    <label>Current Image</label>
                    <img
                      src="<%= game.gameImages[2] %>"
                      alt="Current Image"
                      style="max-width: 300px; max-height: 200px"
                    />
                  </div>
                  <input class="form-control" type="file" name="gameImage" id="imageInput3" value="<%= game.gameImages[2] %>" />

                    <div id="errorImage" style="color: red;"></div>
                  </div>


                  <button type="submit" class="btn btn-default">
                    Submit Button
                  </button>
                  <button type="reset" class="btn btn-default">
                    Reset Button
                  </button>
                </form>
              </div>
              <!-- ... (existing code) -->
            </div>
            <!-- ... (existing code) -->
          </div>
          <!-- ... (existing code) -->
        </div>
        <!-- ... (existing code) -->
      </div>
      <!-- ... (existing code) -->
    </div>
    <!-- ... (existing code) -->
  </div>
  <!-- ... (existing code) -->
</div>

<script>
  function validateForm() {
    var gameName = document.getElementById("gameNameInput").value.trim();
    var description = document.getElementById("descriptionInput").value.trim();
    var price = parseFloat(document.getElementById("gamePrice").value);
    var gameSize = document.getElementById("gameSizeInput").value.trim();
    var imageInput = document.getElementById("imageInput").value.trim();
    var allowedExtensions = /\.(jpg|jpeg|png|gif)$/i;

    document.getElementById("errorGameName").textContent = "";
    document.getElementById("errorDescription").textContent = "";
    document.getElementById("errorPrice").textContent = "";
    document.getElementById("errorGameSize").textContent = "";
    document.getElementById("errorImage").textContent = "";

    if (!gameName) {
      document.getElementById("errorGameName").textContent =
        "Game name is required.";
      return false;
    }

    if (description.split(/\s+/).length < 5) {
      document.getElementById("errorDescription").textContent =
        "Description must contain a minimum of 5 words.";
      return false;
    }

    if (isNaN(price) || price <= 0) {
      document.getElementById("errorPrice").textContent =
        "Price must be a valid number greater than zero.";
      return false;
    }

    // Custom validation for gameSize accepting numeric or decimal values
    if (!(/^\d+(\.\d+)?$/.test(gameSize))) {
      document.getElementById("errorGameSize").textContent =
        "Size must be a valid number greater than zero.";
      return false;
    }

    if (!allowedExtensions.test(imageInput)) {
      document.getElementById("errorImage").textContent =
        "Invalid file type. Please upload a valid image file.";
      return false;
    }

    return true;
  }
</script>

