<%- include('./includes/adminHeader.ejs'); -%>

<div id="page-wrapper">
  <div class="container-fluid">
      <div class="row">
          <div class="col-lg-12">
              <h1 class="page-header">Edit Game</h1>
          </div>
          <!-- /.col-lg-12 -->
      </div>
      <!-- /.row -->
      <div class="row">
          <div class="col-lg-12">
              <div class="panel panel-default">
                  <div class="panel-heading">
                      Edit game details
                  </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-lg-6">
                <span style="color: red"><%= message1 %></span>
                <form
                  role="form"
                  action="/editGame/<%= game._id %>"
                  method="post"
                  enctype="multipart/form-data"
                  onsubmit="return validateForm()"
                >
                  <div class="form-group">
                    <label>Game name</label>
                    <input
                      class="form-control"
                      type="text"
                      name="gameName"
                      value="<%= game.gameName %>"
                      required
                    />
                    <div id="errorGameName" style="color: red;"></div>
                  </div>

                  <div class="form-group">
                    <label>Description</label>
                    <textarea
                      class="form-control"
                      name="description"
                      id=""
                      cols="30"
                      rows="10"
                      required
                    ><%= game.description %></textarea>
                    <div id="errorDescription" style="color: red;"></div>
                  </div>

                  <!-- ... (other fields) -->

                  <div class="form-group">
                    <label>Price</label>
                    <input
                      class="form-control"
                      type="text"
                      name="price"
                      value="<%= game.price %>"
                      required
                    />
                    <div id="errorPrice" style="color: red;"></div>
                  </div>

                  <div class="form-group">
                    <label>Size</label>
                    <div style="display: flex;">
                      <input
                        class="form-control"
                        type="text"
                        name="gameSize"
                        value="<%= game.gameSize %>"
                        required
                      />
                      <select name="measure" id="measurement">
                        <option value="gb">GB</option>
                        <option value="mb">MB</option>
                      </select>
                    </div>
                    <div id="errorGameSize" style="color: red;"></div>
                  </div>

                  <div class="form-group">
                    <label>Current Image</label>
                    <img
                      src="<%= game.gameImage %>"
                      alt="Current Image"
                      style="max-width: 300px; max-height: 200px"
                    />
                  </div>

                  <div class="form-group">
                    <label>New Image</label>
                    <input
                      class="form-control"
                      type="file"
                      name="gameImage"
                    />
                    <div id="errorImage" style="color: red;"></div>
                  </div>

                  <button type="submit" class="btn btn-default">
                    Submit Button
                  </button>
                  <button type="button" class="btn btn-default">
                    Reset Button
                  </button>
                </form>
              </div>
              <!-- ... (existing code) -->
            </div>
            <!-- ... (existing code) -->
          </div>
          <!-- ... (existing code) -->
        </div>
        <!-- ... (existing code) -->
      </div>
      <!-- ... (existing code) -->
    </div>
    <!-- ... (existing code) -->
  </div>
  <!-- ... (existing code) -->
</div>

<script>
  function validateForm() {
    // Reset error messages
    document.getElementById("errorGameName").textContent = "";
    document.getElementById("errorDescription").textContent = "";
    document.getElementById("errorPrice").textContent = "";
    document.getElementById("errorGameSize").textContent = "";
    document.getElementById("errorImage").textContent = "";

    var gameName = document.forms[0]["gameName"].value;
    var description = document.forms[0]["description"].value;
    var price = document.forms[0]["price"].value;
    var gameSize = document.forms[0]["gameSize"].value;
    var imageInput = document.forms[0]["gameImage"].value;

    // Validate game name (should contain minimum one word)
    if (!/\w+/.test(gameName)) {
      document.getElementById("errorGameName").textContent =
        "Enter a valid game name.";
      return false;
    }

    // Validate description (should contain minimum 10 words)
    var words = description.match(/\S+/g) || [];
    if (words.length < 10) {
      document.getElementById("errorDescription").textContent =
        "Description must contain a minimum of 10 words.";
      return false;
    }

    // Validate price (should be a number and contain minimum one digit)
    if (!/^\d+$/.test(price) || parseInt(price) <= 0) {
      document.getElementById("errorPrice").textContent =
        "Price must be a number ";
      return false;
    }

    // Validate game size (should be a number and does not contain any alphabets)
    if (!/^\d+$/.test(gameSize) || parseInt(gameSize) <= 0) {
      document.getElementById("errorGameSize").textContent =
        "Size must be a number ";
      return false;
    }

    // Validate image (should be an image file)
    var allowedExtensions = /(\.jpg|\.jpeg|\.png|\.gif)$/i;
    if (!allowedExtensions.exec(imageInput)) {
      document.getElementById("errorImage").textContent =
        "Invalid file type. Please upload a valid image file.";
      return false;
    }

    // If all validations pass, submit the form
    return true;
  }
</script>

