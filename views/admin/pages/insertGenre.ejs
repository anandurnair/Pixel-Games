<%- include('./includes/adminHeader.ejs'); -%>
<div id="page-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <h1 class="page-header">Insert Genre</h1>
        </div>
        <!-- /.col-lg-12 -->
      </div>
      <!-- /.row -->
      <div class="row">
        <div class="col-lg-12">
          <div class="panel panel-default">
            <div class="panel-heading">
              Enter Genre details
            </div>
            <div class="panel-body">
              <div class="row">
                  <div class="col-lg-6">
                    <span style="color: red;"><%= message1 %></span>
                  <form role="form" action="/insertGenreData" method="post" onsubmit="return validateGenreName()">
                    <div class="form-group">
                      <label>Genre name</label>
                      <div class="input-box">
                        <input class="form-control" type="text" name="genreName" id="genreName" required>
                        <div id="errorGenreName" style="color: red;"></div>
                      </div>
                    </div>
  
                    <button type="submit" class="btn btn-default">Submit Button</button>
                    <button href="/insertGenre" type="" class="btn btn-default">Reset Button</button>
                  </form>
                </div>
                <!-- /.col-lg-6 (nested) -->
              </div>
              <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
          </div>
          <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </div>
  
  <script>
    function validateGenreName() {
      var genreNameInput = document.getElementById('genreName').value;
      var errorGenreName = document.getElementById('errorGenreName');
  
      // Reset error message
      errorGenreName.textContent = '';
  
      // Validate genre name (should not contain symbols or numbers)
      if (!/^[A-Za-z\s]+$/.test(genreNameInput)) {
        errorGenreName.textContent = 'Genre name should not contain symbols or numbers.';
        return false;
      }
  
      // If validation passes, submit the form
      return true;
    }
  </script>

