<%- include('./includes/adminHeader.ejs'); -%>

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <h1 class="page-header">Genre Management</h1>
            </div>
            <li class="search-bar sidebar-search  col-lg-4" style="margin-top: 20px;">
                <div class="input-group custom-search-form">
                    <form action="/searchGenre" method="get" style="display: flex;">

                        <input type="text" class="form-control" name="fullName" placeholder="Search by Fullname">
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                                <i class="fa fa-search"></i>
                            </button>
                    </form>
                    </span>
                </div>
              
            </li> 
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <a href="/insertGenre"><button>Insert Genre</button></a>
                         
                     </div>
                     <div class="panel-heading">
                         Genre List
                     </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Genre name</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% genres.forEach(genre=>{ %>
                                        <tr class="odd gradeX">
                                            <td><%= genre.id %></td>
                                            <td><%= genre.genreName %></td>
                                            <td class="center"><% if (genre.isUnlist) { %>
                                                <a href="/unblock/<%= genre._id %>">Unlist</a>
                                              <% } else { %>
                                                <a href="/block/<%= genre._id %>">List</a>
                                              <% } %></td>
                                            <td class="center"><a href="/editGenre/<%= genre._id %>">Edit</a></td>
    
                                        </tr>
                                        <% }); %>
                                    
                                </tbody>
                                <span><%= message %></span>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                       
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
       
        <!-- /.row -->
        
      
    </div>
    <!-- /.container-fluid -->
</div>

<%- include('./includes/adminFooter.ejs'); -%>