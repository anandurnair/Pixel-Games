<%- include('./includes/adminHeader.ejs'); -%>

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <h1 class="page-header">Users Management</h1>
            </div>
            <li class="search-bar sidebar-search  col-lg-4" style="margin-top: 20px;">
                <div class="input-group custom-search-form">
                    <form action="/searchUser" method="get" style="display: flex;">

                        <input type="text" class="form-control" name="fullName" placeholder="Search by Fullname">
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                                <i class="fa fa-search"></i>
                            </button>
                    </form>
                    </span>
                </div>
              
            </li> 
            
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                       <a href="/insertUser"><button>Insert User</button></a>
                        
                    </div>
                    <div class="panel-heading">
                        Users List
                    </div>
                    
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                       
                                        <th>Full name</th>
                                       
                                        <th>Email</th>
                                        <th>Country</th>
                                        <th>Phone</th>
                                        <th>Block/unblock</th>
                                        <!-- <th>Edit</th> -->
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.forEach(user=>{ %>
                                    <tr class="odd gradeX">
                                       
                                        <td><%= user.fullName %></td>
                                        <td class="center"><%= user.email %></</td>
                                        <td class="center"><%= user.country %></td>
                                        <td class="center"><%= user.phone %></td>
                                        <td class="center"><% if (user.isBlocked) { %>
                                            <a href="/unblock/<%= user._id %>">Unblock</a>
                                          <% } else { %>
                                            <a href="/block/<%= user._id %>">Block</a>
                                          <% } %></td>
                                      <!-- <td class="center"><a href="/editUser">Edit</a></td> -->

                                    </tr>
                                    <% }); %>
                                </tbody>
                                <span style="color: red;"><%= message %></span>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
