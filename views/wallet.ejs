<%- include('header') %>
    <div class="wallet-container ">
        <div class="wallet-header">
            <h2>My Wallet</h2>
        </div>

        <div class="container p-4" style="max-width: 600px;">
            <div class="balance text-center">
                Balance: ₹<%= wallet.balance %>.00 <!-- Replace with dynamic balance from backend -->
            </div>

            <div class="wallet-actions">
                <button class="action-button btn remove-btn" data-toggle="modal" data-target="#exampleModalCenter" style="border: 2px solid #ffffff;">Add Money +</button>
                <button class="action-button btn remove-btn" style="border: 2px solid #ffffff;">Withdraw</button>
                <button class="action-button btn remove-btn" style="border: 2px solid #ffffff;">Transfer</button>
            </div>
        
        

            <h4 class="mt-4" >Transaction History</h4>
            <ul class="transaction-list">
                <li class="transaction">
                    <span  class="transaction-type" >Add Money +</span>
                    <span class="transaction-amount">+ ₹100.00</span>
                </li>
                <li class="transaction">
                    <span class="transaction-type">Purchase</span>
                    <span class="transaction-amount">- ₹50.00</span>
                </li>
                <li class="transaction">
                    <span class="transaction-type">Refund</span>
                    <span class="transaction-amount">+ ₹20.00</span>
                </li>
            </ul>
        </div>
    </div>

    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" data-backdrop="false">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle" style="color:black;">Add Money</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <form id="addMoneyForm" action="/addMoneyData" method="post" onsubmit="return validateForm()">
                <div class="modal-body">
                  <p>Enter the Amount (₹)</p>
                  <input type="number" name="addAmount" id="addAmount" required min="0" max="10000" step="100" >
                  <p class="form-text text-muted">Maximum amount to add at a time 10,000</p>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                  <button type="submit" class="btn btn-primary">Proceed to add</button>
                </div>
              </form>
          </div>
        </div>
      </div>
      <script>
        function validateForm() {
            var addAmount = document.getElementById("addAmount").value;
            
            // Check if addAmount is a number and meets the criteria
            if (isNaN(addAmount) || addAmount <= 0 || addAmount > 10000 || addAmount % 100 !== 0) {
              alert("Please enter a positive number, not exceeding 10,000, and a multiple of 100.");
              return false; // Prevent form submission
            }
            return true; // Proceed with form submission
          }
      </script>
    <%- include('footer') %>