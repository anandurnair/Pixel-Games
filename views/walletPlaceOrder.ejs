<%- include('header') %>
  
  <!-- Breadcrumb Section Begin -->
  <section class="breadcrumb-section set-bg" data-setbg="/images/banner3.jpg ">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <div class="breadcrumb__text">
            <h2>Checkout</h2>

          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Breadcrumb Section End -->

  <!-- Checkout Section Begin -->
  <section class="checkout spad">
    <div class="container">
     
      <div class="checkout__form">
        <!-- <h4>Billing Details</h4> -->

        <div class="row">
         

          <div class="walletPay">
            <div style="text-align: center;"><h4 style="color:#05121B">Wallet Pay</h4></div>
            <% if(balanceErr){ %>
              <span style="color: red;font-size:15px">Insufficient Balance..!</span>
            <% } %>
            <p>Total Balance in wallet : ₹<%= balance %></p>
            <p>Total order price : ₹<%= totalAmount  %></p>
            <div style="display: flex;">
              <a href="/cart/Checkout/:value" style="margin-right:20px ;">
  
                <button type="button" class="btn btn-primary">Cancel</button></a>
                <% if(balanceErr==false){ %>
                  <form action="/walletPlaceOrderData" method="post">
                    <input type="text" name="totalAmount" value="<%= totalAmount %>" hidden>
                    <button type="submit" class="btn btn-success">Proceed to Pay</button>
  
                  </form>
                  <% } %>
            </div>
            
          </div>
  
        </div>
      
       
     
      </div>
    </div>
  </section>

 

  <%- include('footer') %>