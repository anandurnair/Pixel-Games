    <!-- Featured Section Begin -->
    <section class="featured spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>All Games</h2>
                    </div>
                    <div class="featured__controls">
                        <ul>
                            <li  class="active" data-filter="*"><a style="color: aliceblue;" href="/categories">All</a></li>
                            <% genres.forEach(genre=>{ %>
                                <% if(genre.unlistGenre==false){ %>
                                    <li data-filter=".<%= genre.genreName  %>">
                                        <%= genre.genreName %>
                                    </li>
                                    <%} }); %>
                                        <li>
                                            <form class="form-inline my-2 my-lg-0" action="/searchGames" method="get">
                                                <input class="form-control mr-sm-2" name="gameName" type="search"
                                                    placeholder="Search" aria-label="Search">
                                                <button class="btn btn-outline-success my-2 my-sm-0 search-btn"
                                                    type="submit">Search</button>
                                            </form>
                                        </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row featured__filter">
                <span style="font-size: 20px; color:#fff;text-align: center;" >
                    <%= message %>
                </span>
                <% games.forEach(game=>{ %>
                    <% if(game.unlist==false){ %>
                        <div class="col-lg-3 col-md-4 col-sm-6 mix <%= game.genre %> ">
                            <div class="featured__item">
                                <div class="featured__item__pic set-bg" data-setbg="<%= game.gameImage %>">
                                    <ul class="featured__item__pic__hover">
                                        <!-- <li><a href="#"><i class="fa fa-heart"></i></a></li> -->
                                        <!-- <li><a href="#"><i class="fa fa-retweet"></i></a></li> -->
                                        <li><a href="/gameDetails/<%= game._id %>/?userId=<%= user._id %>"><i
                                                    class="fa fa-shopping-cart"></i></a></li>
                                    </ul>
                                </div>
                                <div class="featured__item__text">
                                    <h6><a href="/gameDetails/<%= game._id %>/?userId=<%= user._id %>">
                                            <%= game.gameName %>
                                        </a></h6>
                                    <h5>â‚¹ <%= game.price %>.00</h5>
                                </div>
                            </div>
                        </div>


                        <%} }); %>
            </div>
        </div>
    </section>
