<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8" />
    <!--<title> Login and Registration Form in HTML & CSS | CodingLab </title>-->
    <link rel="stylesheet" href="./css/login.css" />
    <!-- Fontawesome CDN Link -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      #resendLink{
        color: aliceblue;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <input type="checkbox" id="flip" />
      <div class="cover">
        <div class="front">
          <img src="./images/signup-img.jpg" alt="" />
          <div class="text">
            <span class="text-1"
              >Every new friend is a <br />
              new adventure</span
            >
            <span class="text-2">Let's get connected</span>
          </div>
        </div>
        <div class="back">
          <img class="backImg" src="" alt="" />
          <div class="text">
            <span class="text-1"
              >Complete miles of journey <br />
              with one step</span
            >
            <span class="text-2">Let's get started</span>
          </div>
        </div>
      </div>
      <div class="forms">
        <div class="form-content">
        
          <div class="signup-form">
            <div class="title">OTP verification</div>
            <form action="/passwordOTPData" method="post">
              <div class="input-boxes" >
               
               
                <div class="input-box" style="display: none;">
                  <i class="fas fa-envelope"></i>
                  <input type="email" name="email" value="<%= email %>" />
                  <input type="text" name="time" value="<%= time %>">
                </div>
                <!-- <div class="input-box" style="display: none;">
                  <i class="fas fa-envelope"></i>
                  <input type="text" name="phone" value="" />
                </div> -->
               
                <div class="input-box">
                  <i class="fas fa-user"></i>
                  <input type="text" placeholder="Enter OTP" name="otpCode" required />
                </div>
                <span style="color:red"><%- error %></span>
                <div class="button input-box">
                  <input type="submit" value="Sumbit" />
                </div>
              </form>
              <div class="timer-box">
                <p id="timer" style="color: rgb(255, 0, 0);"></p>
              </div>
                <div class="button input-box">

                  <form method="post" action="/forgotPasswordData">
                    <input type="text" name="email" value="<%= email %>" hidden>
                    <input type="text" name="time" value="<%= time %>" hidden>

                    <button type="submit"  class="btn btn-outline-light"  id="resendButton" >Resend OTP</button>
                  </form>
                </div>     
          
          </div>
        </div>
      </div>
    </div>
    <script>
      const timerDuration = 60; // Timer duration in seconds
  
      function startTimer() {
        let endTime = parseInt(localStorage.getItem('endTime'));
        if (!endTime || isNaN(endTime) || endTime < Date.now()) {
          endTime = Date.now() + timerDuration * 1000;
          localStorage.setItem('endTime', endTime);
        }
  
        const timerElement = document.getElementById('timer');
        const resendLink = document.getElementById('resendLink');
        const resendForm = document.getElementById('resendForm');
  
        function updateCountdown() {
          const currentTime = Date.now();
          const remainingTime = Math.max(0, Math.floor((endTime - currentTime) / 1000));
          if (remainingTime === 0) {
            localStorage.removeItem('endTime');
            timerElement.textContent = 'Request again';
            resendLink.textContent = 'Request again';
            resendLink.removeAttribute('href'); // Remove the href attribute when expired
            return;
          }
          const minutes = Math.floor(remainingTime / 60);
          const seconds = remainingTime % 60;
          timerElement.textContent = `OTP expires in: ${minutes}:${seconds < 10 ? '0' : ''}${seconds}`;
        }
  
        updateCountdown();
        const timerInterval = setInterval(updateCountdown, 1000);
  
        // Reset timer when Resend OTP button is clicked
        const resendButton = document.getElementById('resendButton');
        resendButton.addEventListener('click', function (event) {
          localStorage.removeItem('endTime'); // Clear the stored timer end time
          startTimer(); // Restart the timer
        });
      }
  
      startTimer();
    </script>
  </body>
</html>
