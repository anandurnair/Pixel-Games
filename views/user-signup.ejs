<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="UTF-8" />
  <link rel="stylesheet" href="./css/login.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
  <style>
    .input-box {
      position: relative;
    }

    .error-message {
      color: red;
      font-size: 14px;
      position: absolute;
      bottom: -20px;
      left:3q0px
    }
  </style>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>

<body>
  <div class="container">
    <input type="checkbox" id="flip" />
    <div class="cover">
      <div class="front">
        <img src="./images/signup-img.jpg" alt="" />
        <div class="text">
          <span class="text-1">Every new friend is a <br /> new adventure</span>
          <span class="text-2">Let's get connected</span>
        </div>
      </div>
      <div class="back">
        <img class="backImg" src="" alt="" />
        <div class="text">
          <span class="text-1">Complete miles of journey <br /> with one step</span>
          <span class="text-2">Let's get started</span>
        </div>
      </div>
    </div>
    <div class="forms">
      <div class="form-content">
        <div class="signup-form">
          <div class="title">Signup</div>

          <form id="signupForm" action="/signupData" method="post" onsubmit="return validateForm()">
            <div class="input-boxes">
              <span style="color: red;"><%= message1 %></span>
              <div class="input-box">
                <i class="fas fa-user"></i>
                <input type="text" placeholder="Enter your fullname" name="fullName" required />
                <div class="error-message" id="errorFullName"></div>
              </div>
              <div class="input-box">
                <i class="fas fa-envelope"></i>
                <input type="email" placeholder="Enter your email" name="email" required />
                <div class="error-message" id="errorEmail"></div>
              </div>
              <!-- <div class="input-box">
                <i class="fas fa-phone"></i>
                <input type="text" placeholder="Enter your phone number" name="phone" required />
                <div class="error-message" id="errorPhone"></div>
              </div> -->
              <div class="input-box">
                <input type="password" placeholder="Enter your password" name="password" required />
                <i class="fas fa-lock"></i>
                <div class="error-message" id="errorPassword"></div>
              </div>
              <div class="button input-box">
                <input type="submit" value="SignUp"/>
              </div>
              <div class="text sign-up-text">
                Already have an account? <a href="/">Login now</a>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>
    function validateForm() {
      // Get form elements
      var fullNameInput = document.forms["signupForm"]["fullName"];
      var emailInput = document.forms["signupForm"]["email"];
      
      var passwordInput = document.forms["signupForm"]["password"];

      // Reset error messages
      var errorFullName = document.getElementById("errorFullName");
      var errorEmail = document.getElementById("errorEmail");
     
      var errorPassword = document.getElementById("errorPassword");

      errorFullName.textContent = "";
      errorEmail.textContent = "";
  
      errorPassword.textContent = "";

      // Validate full name (should not contain numbers)
      if (!/^[A-Za-z\s]+$/.test(fullNameInput.value)) {
        errorFullName.textContent = "Full name should not contain numbers.";
        return false;
      }

      // Validate email format
      if (!/^\S+@\S+\.\S+$/.test(emailInput.value)) {
        errorEmail.textContent = "Invalid email address.";
        return false;
      }

      // Validate phone number (basic format, without dashes or spaces)
   

      // Validate password (should contain at least 6 characters)
      if (passwordInput.value.length < 6) {
        errorPassword.textContent = "Password must contain at least 6 characters.";
        return false;
      }

      // If all validations pass, submit the form
      return true;
    }
  </script>
</body>

</html>
